    <script is:inline>
      (function () {
        async function t() {
          const e = new URLSearchParams(window.location.search).get("key");
          if (!e) return;
          try {
            const t = await fetch(`/api/contact?key=${encodeURIComponent(e)}`);
            if (!t.ok) return;
            const e = await t.json();
            if (!e.success || !e.data.showFull) return;
            const t = document.getElementById("contact-address"),
              n = document.getElementById("contact-city"),
              o = document.getElementById("contact-email"),
              s = document.getElementById("contact-phone"),
              c = document.getElementById("extended-cv-link"),
              r = e.data;
            t &&
              r.address &&
              ((t.textContent = r.address), t.classList.remove("hidden")),
              n && r.city && (n.textContent = r.city),
              o && r.email && (o.textContent = r.email),
              s &&
                r.phone &&
                ((s.textContent = r.phone), s.classList.remove("hidden")),
              c && c.classList.remove("hidden");
          } catch (t) {}
        }
        document.readyState === "loading"
          ? document.addEventListener("DOMContentLoaded", t)
          : t();
      })();
