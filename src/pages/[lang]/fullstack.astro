---
import { getTranslations, type Lang, languages } from "../../i18n";
import LanguageSwitcher from "../../components/LanguageSwitcher.astro";
import CV from "../../components/CV.astro";
import { getFullStackProfile } from "../../data/cv-data";

export async function getStaticPaths() {
  return languages.map((lang) => ({
    params: { lang: lang.code },
  }));
}

const { lang } = Astro.params;
const t = getTranslations(lang as Lang);
const profile = getFullStackProfile(t);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{t.meta.title} - Full Stack</title>
    <meta name="description" content={t.meta.description} />
  </head>
  <body class="bg-gray-50">
    <LanguageSwitcher currentLang={lang as Lang} />
    <CV lang={lang as Lang} t={t} profile={profile} />
  </body>
</html>
