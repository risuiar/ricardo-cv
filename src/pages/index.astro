---
import { getTranslations, defaultLang } from "../i18n";
import LanguageSwitcher from "../components/LanguageSwitcher.astro";
import CV from "../components/CV.astro";
import { getFrontendProfile } from "../data/cv-data";

const t = getTranslations(defaultLang);
const profile = getFrontendProfile(t);
---

<!doctype html>
<html lang={defaultLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{t.meta.title}</title>
    <meta name="description" content={t.meta.description} />
  </head>
  <body class="bg-gray-50">
    <LanguageSwitcher currentLang={defaultLang} />
    <CV lang={defaultLang} t={t} profile={profile} />
  </body>
</html>
